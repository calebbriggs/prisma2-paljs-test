{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "es6",
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["esnext.asynciterable"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", ".vscode", "/node_modules", "dist"]
}
